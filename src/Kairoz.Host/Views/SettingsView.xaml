<UserControl x:Class="Kairoz.Host.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Loaded="OnLoaded">
    <Grid>
        <ui:Card Header="Settings"
                 Padding="24">
            <StackPanel>
                <TextBlock Text="Capture FPS"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                <ui:ComboBox ItemsSource="{Binding CaptureFpsOptions}"
                             SelectedItem="{Binding SelectedCaptureFps, Mode=TwoWay}"
                             Margin="0,8,0,16">
                    <ui:ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Path=., StringFormat={}{0:D} FPS}" />
                        </DataTemplate>
                    </ui:ComboBox.ItemTemplate>
                </ui:ComboBox>
                <TextBlock Text="UI Scale"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                <ui:TextBox Text="{Binding UiScale, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Margin="0,8,0,16"
                            Width="160" />
                <ui:Button Content="Save"
                           Command="{Binding SaveCommand}"
                           HorizontalAlignment="Right"
                           Width="120" />
            </StackPanel>
        </ui:Card>
    </Grid>
</UserControl>
