<UserControl x:Class="Kairoz.Host.Views.FeatureShellView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240" />
            <ColumnDefinition Width="16" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <ui:Card Header="Plugins"
                 Padding="0"
                 Margin="0">
            <ListBox ItemsSource="{Binding Plugins}"
                     SelectedItem="{Binding SelectedPlugin, Mode=TwoWay}"
                     DisplayMemberPath="Title"
                     BorderThickness="0"
                     Background="Transparent" />
        </ui:Card>
        <ui:Card Grid.Column="2"
                 Padding="24">
            <ContentPresenter Content="{Binding ActiveView}" />
        </ui:Card>
    </Grid>
</UserControl>
